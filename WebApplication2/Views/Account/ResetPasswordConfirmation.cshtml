            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"> </label>
            <div class="login-form">
                <div class="sign-in-htm">

                    <hgroup class="title">
                    </hgroup>
                    <div>
                        <p>
                            密碼已成功重設，請重新登入帳號!
                            @*@Html.ActionLink("點選", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })*@
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>