@model WebApplication2.Models.RegisterViewModel

@{
    ViewBag.Title = "會員註冊";
}

<link href="~/Content/LoginPage.css" rel="stylesheet" />
<style>
    body {
        font-family: 'Microsoft JhengHei';
    }

    .login-html {
        width: 100%;
        height: 100%;
        position: absolute;
        padding: 90px 70px 50px 70px;
        background: #1d7da3;
    }

    .login-form .group .LLlabel {
        color: aliceblue;
        font-size: 12px;
    }

    .regisdata {
        background: #fce514;
        border: 1px solid white;
        padding: 10px;
        border-radius: 10px;
        margin-top:40px;
    }

    .regisdata:hover {
        background: #00ff21;
        color:black;
        border: 1px solid white;
        padding: 10px;
        border-radius: 10px;
        margin-top: 40px;
    }
</style>
<div class="Detail">
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">註冊</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"> </label>
            <div class="login-form">
                <div class="sign-in-htm">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />


                        <div class="group">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @Html.LabelFor(m => m.Email, new { @class = "LLlabel" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "input inputEmail"})
                        </div>

                        <div class="group">
                            @Html.LabelFor(m => m.Password, new { @class = "LLlabel" })
                            @Html.PasswordFor(m => m.Password, new { @class = "input inputPassword" })
                        </div>

                        <div class="group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "LLlabel" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input inputreconfirmPassword" })
                        </div>
                        @*@Html.Partial("_CustomerRegisterationPartial");*@
                        <div class="group">
                            <input type="submit" class="button" value="註冊" />
                        </div>
                    }



                    <button class="regisdata">客戶註冊</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
<script>
    $(".regisdata").click(function () {
        $(".inputEmail").val("iamcustomer@gmail.com")
        $(".inputPassword").val("abcABC123!")
        $(".inputreconfirmPassword").val("abcABC123!")       
    })
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
