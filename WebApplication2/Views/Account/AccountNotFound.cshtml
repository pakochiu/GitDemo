@model WebApplication2.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "重新設定你的密碼";
}


<link href="~/Content/LoginPage.css" rel="stylesheet" />
<style>
    body {
        font-family: 'Microsoft JhengHei';
    }

    .login-html {
        width: 100%;
        height: 100%;
        position: absolute;
        padding: 90px 70px 50px 70px;
        background: #1d7da3;
    }

    .login-form .group .LLlabel {
        color: aliceblue;
        font-size: 12px;
    }

    .regisdata {
        background: #fce514;
        border: 1px solid white;
        padding: 8px;
        border-radius: 10px;
        margin-top: 6px;
        margin-bottom: 3px;
    }

        .regisdata:hover {
            background: #00ff21;
            color: black;
            border: 1px solid white;
            padding: 8px;
            border-radius: 10px;
            margin-top: 6px;
            margin-bottom: 3px;
        }

    a {
        color: darkgray;
        text-decoration: none;
    }

        a:hover {
            color: yellow;
            text-decoration: none;
        }
</style>

<div class="Detail">
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">@ViewBag.Title</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"> </label>
            <h2 style="color:aliceblue">無此帳號</h2>
            <div>
                @Html.ActionLink("上一頁", "ForgotPassword")
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
<script>
    $(".regisdata1").click(function () {
        $(".inputEmail").val("msit126gradproj@gmail.com")
    })

</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
