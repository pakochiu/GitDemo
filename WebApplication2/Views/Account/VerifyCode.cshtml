@model WebApplication2.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "請輸入手機驗證碼";
}

<link href="~/Content/LoginPage.css" rel="stylesheet" />
<style>
    body {
        font-family: 'Microsoft JhengHei';
    }

    #Facebook {
        background: #3C5A99;
        color: aliceblue;
    }

    #Google {
        background: #EC5445;
        color: aliceblue;
    }

    #forgotPw:hover {
        color: gold
    }

    .login-html {
        width: 100%;
        height: 100%;
        position: absolute;
        padding: 90px 70px 50px 70px;
        background: #1d7da3;
    }

    .login-form .group .LLlabel {
        color: aliceblue;
        font-size: 12px;
    }
</style>

<div class="Detail">
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">手機簡訊驗證</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"> </label>
            <div class="login-form">
                <div class="sign-in-htm">

                    @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("provider", @Model.Provider)
                        @Html.Hidden("rememberMe", @Model.RememberMe)
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="group">

                            @*@Html.LabelFor(m => m.Code, new { @class = "LLlabel" })*@
                                <label class="LLlabel">驗證碼</label>
                                @Html.TextBoxFor(m => m.Code, new { @class = "input" })
                        </div>
                        <div class="group">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberBrowser)
                                    @Html.LabelFor(m => m.RememberBrowser)
                            </div>
                        </div>
                        <div class="group">
                                <input type="submit" class="button" value="驗證" />
                            </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
