@model WebApplication2.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "註冊帳號";
}

<link href="~/Content/LoginPage.css" rel="stylesheet" />
<style>
    body {
        font-family: 'Microsoft JhengHei';
    }

    .login-html {
        width: 100%;
        height: 100%;
        position: absolute;
        padding: 90px 70px 50px 70px;
        background: #1d7da3;
    }

    .login-form .group .LLlabel {
        color: aliceblue;
        font-size: 12px;
    }

    .regisdata {
        background: #fce514;
        border: 1px solid white;
        padding: 10px;
        border-radius: 10px;
        margin-top: 40px;
    }

        .regisdata:hover {
            background: #00ff21;
            color: black;
            border: 1px solid white;
            padding: 10px;
            border-radius: 10px;
            margin-top: 40px;
        }
    h4, .h4 {
        font-size: 18px;
        color: aliceblue;
    }

    .text-info {
        color: aliceblue;
    }

    label {
        display: inline-block;
        max-width: 100%;
        margin-left: 15px;
        margin-bottom: 5px;
        font-weight: 700;
        color: aliceblue;
    }

    .button {
        border: none;
        padding: 15px 20px;
        border-radius: 25px;
        background: #1161ee;
        color: aliceblue;
        margin-left: -75px;
    }


</style>
<div class="Detail">
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">帳戶關連</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"> </label>

            @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <p class="text-info">
                    你已成功連結至 <strong>@ViewBag.LoginProvider</strong> 帳號
                    請輸入你的電子郵件完成註冊步驟
                </p>
                <br>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "LLlabel" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="button" value="註冊" />
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
