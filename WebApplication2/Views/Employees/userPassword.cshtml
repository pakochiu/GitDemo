@model WebApplication2.tEmployee


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        @Html.AntiForgeryToken()
        <h4>tEmployee</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.fEmployeeID)

        <div class="form-group">
            @Html.LabelFor(model => model.fName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.fName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.fUserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.fUserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.fLoginPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("PassWord", new { htmlAttributes = new { @class = "required form-control", type = "password", placeholder = "Password", onblue = "checkpas1();" } })
                @Html.ValidationMessageFor(model => model.fLoginPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("確認密碼", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("confirm", new { htmlAttributes = new { @class = "required form-control", type = "password", placeholder = "Password", onblue = "checkpas1();" } })
                @Html.ValidationMessageFor(model => model.fLoginPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" onclick="history.go(-1);" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("回上一頁", "Edit", new { id = Model.fEmployeeID })
</div>
