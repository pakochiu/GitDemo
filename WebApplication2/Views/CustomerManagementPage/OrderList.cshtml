@model IEnumerable<WebApplication2.tOrder>

@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_LayoutPageTest.cshtml";
}

<link href="../../assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
<link href="../../dist/css/style.min.css" rel="stylesheet">

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">訂單記錄</h5>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style="font-weight:bold">訂單日期</th>
                                    <th style="font-weight:bold">訂單號碼</th>
                                    <th style="font-weight:bold">專案經理</th>
                                    <th style="font-weight:bold">預計完工日期</th>
                                    <th style="font-weight:bold">訂單總額</th>
                                    <th style="font-weight:bold">訂單明細</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.fOrderDate.ToString("yyyy-MM-dd")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.fOrderID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tEmployee.fName)
                                        </td>
                                        <td>
                                            @item.fDeliverDate4.ToString("yyyy-MM-dd")
                                        </td>
                                        <td>
                                            @(((decimal)item.fGetMoneyBack1+(decimal)item.fGetMoneyBack2+(decimal)item.fGetMoneyBack3+(decimal)item.fGetMoneyBack4).ToString("#,#", System.Globalization.CultureInfo.InvariantCulture))
                                        </td>
                                        <td>
                                            @Html.ActionLink("訂單明細", "OrderDetailTable", "CustomerManagementPage", new { id = item.fOrderID }, new { @class = "btn btn-info" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="../../assets/libs/jquery/dist/jquery.min.js"></script>
<script src="../../assets/extra-libs/DataTables/datatables.min.js"></script>

<script>
    $('#zero_config').DataTable();
</script>