<script src="~/js/jquery-1.12.4.js"></script>
<script>
    $("#post").click(function () {

        var heading1 = $("#heading").val();
        var content1 = $("#content").val();

        $.ajax({
            url: "SendMailToSales",
            type: "POST",
            data: { heading: heading1, content: content1 },
            success: function (data) {
                $("#demo").html(data);
            }
        });

    });

</script>
