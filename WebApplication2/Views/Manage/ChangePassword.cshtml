@model WebApplication2.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "更改密碼";
}


<link href="~/Content/LoginPage.css" rel="stylesheet" />
<style>
    body {
        font-family: 'Microsoft JhengHei';
    }
    .login-html {
        width: 100%;
        height: 100%;
        position: absolute;
        padding: 90px 70px 50px 70px;
        background: #1d7da3;
    }
    .login-form .group .LLlabel {
        color: aliceblue;
        font-size: 12px;
    }
    a {
        color: darkgray;
        text-decoration: none;
    }

        a:hover {
            color: yellow;
            text-decoration: none;
        }
</style>
<div class="Detail">
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">帳戶管理</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"> </label>
            <div class="login-form">
                <div class="sign-in-htm">

                    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="group">
                            @Html.LabelFor(m => m.OldPassword, new { @class = "LLlabel" })
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "input" })
                        </div>
                        <div class="group">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "LLlabel" })
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "input" })
                        </div>
                        <div class="group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "LLlabel" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input" })
                        </div>
                        <div class="group">
                            <input type="submit" value="修改密碼" class="button" />
                        </div>
                    }

                    <div>
                        @Html.ActionLink("上一頁", "Index")
                    </div>
                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
                </div>
            </div>
        </div>
    </div>
</div>
